---
// BookmarksLayout.astro
import { ViewTransitions } from "astro:transitions"

interface BookmarksProps {
  title: string
}

const { title } = Astro.props as BookmarksProps
---

<html lang="en" dir="ltr" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <ViewTransitions />
    <style is:global>
      :root {
        /* Typography */
        --__sl-font: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
        --sl-font: var(--__sl-font);
        --sl-text-xs: 0.8125rem;
        --sl-text-sm: 0.9375rem;
        --sl-text-base: 1rem;
        --sl-text-lg: 1.125rem;
        --sl-text-xl: 1.25rem;
        --sl-text-2xl: 1.5rem;
        --sl-text-3xl: 1.8125rem;
        --sl-text-4xl: 2.1875rem;
        --sl-text-5xl: 2.625rem;
        --sl-text-6xl: 3.125rem;
        --sl-line-height: 1.75;
        --sl-line-height-headings: 1.125;

        /* Layout */
        --sl-nav-height: 3.5rem;
        --sl-nav-pad-x: 1rem;
        --sl-nav-pad-y: 0.5rem;
        --sl-mobile-toc-height: 3rem;
        --sl-sidebar-width: 18.75rem;
        --sl-sidebar-pad-x: 1rem;
        --sl-content-width: 67.5rem;
        --sl-content-pad-x: 1rem;
        --sl-menu-button-size: 2rem;
        --sl-nav-gap: 1rem;

        /* Transitions */
        --sl-transition-speed: 150ms;

        /* Radii */
        --sl-radius-sm: 0.25rem;
        --sl-radius-md: 0.375rem;
        --sl-radius-lg: 0.5rem;

        /* Shadows */
        --sl-shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.04);
        --sl-shadow-md: 0 1px 2px rgba(0, 0, 0, 0.06);
        --sl-shadow-lg: 0 1px 3px rgba(0, 0, 0, 0.12);

        /* Z-indices */
        --sl-z-index-navbar: 10;
        --sl-z-index-menu-button: 20;
        --sl-z-index-menu: 30;
        --sl-z-index-toc: 40;
        --sl-z-index-tooltip: 50;

        /* Dark theme colors */
        --sl-color-white: #fff;
        --sl-color-gray-1: #e8eef5;
        --sl-color-gray-2: #bac2cc;
        --sl-color-gray-3: #8490a5;
        --sl-color-gray-4: #606a77;
        --sl-color-gray-5: #444c56;
        --sl-color-gray-6: #2c333b;
        --sl-color-gray-7: #1f242b;
        --sl-color-black: #16181d;
        --sl-color-accent-low: #192738;
        --sl-color-accent: #1062e5;
        --sl-color-accent-high: #c4d9fc;
        --sl-color-accent-text: var(--sl-color-accent);
        --sl-color-text: #e8eef5;
        --sl-color-text-accent: var(--sl-color-accent-high);
        --sl-color-text-invert: #16181d;
        --sl-color-bg: #16181d;
        --sl-color-bg-nav: rgba(22, 24, 29, 0.9);
        --sl-color-bg-sidebar: #16181d;
        --sl-color-bg-inline-code: #2c333b;
        --sl-color-bg-accent: var(--sl-color-accent);
        --sl-color-hairline-light: rgba(255, 255, 255, 0.1);
        --sl-color-hairline-shade: rgba(0, 0, 0, 0.4);
        --sl-color-hairline: rgba(104, 104, 104, 0.4);

        /* Base styles */
        font-family: var(--sl-font);
        color-scheme: dark;
      }

      body {
        margin: 0;
        padding: 0;
        background-color: var(--sl-color-bg);
        color: var(--sl-color-text);
      }

      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: var(--sl-z-index-navbar);
        height: var(--sl-nav-height);
        border-bottom: 1px solid var(--sl-color-hairline-shade);
        padding: var(--sl-nav-pad-y) var(--sl-nav-pad-x);
        background-color: var(--sl-color-bg-nav);
        backdrop-filter: blur(8px);
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .site-title {
        color: var(--sl-color-white);
        font-size: var(--sl-text-xl);
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .site-title:hover {
        color: var(--sl-color-accent-high);
      }

      main {
        margin-top: var(--sl-nav-height);
        padding: 2rem;
        min-height: calc(100vh - var(--sl-nav-height));
        box-sizing: border-box;
      }

      @media (max-width: 50rem) {
        main {
          padding: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="page">
      <slot />
    </div>
  </body>
</html>
